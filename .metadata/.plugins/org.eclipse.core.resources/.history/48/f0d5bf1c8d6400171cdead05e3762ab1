package Sessions;

import java.util.concurrent.atomic.AtomicInteger;


/**    
 *     
 * 项目名称：NetProtocol    
 * 类名称：ClientSessionManager    
 * 类描述：    
 * 创建人：jinyu    
 * 创建时间：2017年7月9日 下午5:49:27    
 * 修改人：jinyu    
 * 修改时间：2017年7月9日 下午5:49:27    
 * 修改备注：    
 * @version     
 *     
 */
public class ClientSessionManager {
    private static int maxClientNum=1000;
    private static ClientSession session=null;
    public static void setMaxClient(int num)
    {
        maxClientNum=num;
        maxNum.set(num);
        
    }
    private static AtomicInteger maxNum=new AtomicInteger(maxClientNum);
    public static synchronized  ClientSession getClient()
    {
        if(session==null)
        {
            session= SessionFactory.createObj();
        }
        if(maxNum.decrementAndGet()==0)
        {
            
        }
        return session;
        
    }
}
